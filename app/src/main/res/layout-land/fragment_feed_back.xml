<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragment.FeedBackFragment">


    <RatingBar
        android:id="@+id/rating_bar"
        android:secondaryProgressTint="@color/rating_selected"
        android:progressTint="@color/rating_selected"
        android:progressBackgroundTint="@color/rating_no_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thank_you_for_your_feedback"
        android:textSize="24sp"
        android:fontFamily="@font/jost_bold"/>

    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="25sp"
        android:background="@drawable/bg_buttons"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jost_medium"/>

</LinearLayout>